<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testpaysdk.MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ShopCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工行商户号:" />

            <EditText
                android:id="@+id/edit_shopcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="" />

            <TextView
                android:id="@+id/TotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单金额(元):" />

            <EditText
                android:id="@+id/edit_totalamount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
              />

            <TextView
                android:id="@+id/ShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商户名称:" />

            <EditText
                android:id="@+id/edit_shopname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="工银e支付数据"
                android:layout_marginBottom="30dp"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/tranData1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接口数据1:" />

            <EditText
                android:id="@+id/edit_tranData1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text=""  />

            <TextView
                android:id="@+id/MerSignMsg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签名数据1:" />

            <EditText
                android:id="@+id/edit_MerSignMsg1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="" />

            <TextView
                android:id="@+id/MerCert1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="证书数据1:" />

            <EditText
                android:id="@+id/edit_MerCert1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="微信支付数据"
                android:layout_marginBottom="30dp"
                android:textSize="15dp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/WXappid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信appid:" />

            <EditText
                android:id="@+id/edit_WXappid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="wxb43c1a969e6f7126"/>


            <TextView
                android:id="@+id/tranData2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接口数据2:" />

            <EditText
                android:id="@+id/edit_tranData2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text=""  />

            <TextView
                android:id="@+id/MerSignMsg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签名数据2:" />

            <EditText
                android:id="@+id/edit_MerSignMsg2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="" />

            <TextView
                android:id="@+id/MerCert2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="证书数据2:" />

            <EditText
                android:id="@+id/edit_MerCert2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="" />



            <Button
                android:id="@+id/pay_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="去支付">
            </Button>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
